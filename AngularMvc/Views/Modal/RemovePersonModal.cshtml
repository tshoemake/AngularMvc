@{
    Layout = null;
}

<div ng-controller="ModalController">
    <div ng-model="modalModel" id="modalDialog">
        <div class="modal-header">
            <button type="button" class="close" aria-label="Close" ng-click="close()">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Delete Person</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6"><span> Are you sure you want to remove the record? </span></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" ng-click="close()">Cancel</button>
            <button type="button" class="btn btn-primary" ng-click="removePerson(modalModel)">OK</button>
        </div>
    </div>
</div>
